<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".menucake"
    android:background="@drawable/u1">

    <!-- start  img facebook -->
    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/iv_profile"
        android:layout_width="70dp"
        android:layout_height="70dp"
        tools:layout_editor_absoluteX="28dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/cricle_bt"
        android:layout_marginTop="10dp"
        tools:layout_editor_absoluteY="16dp" />
    <!-- facebook  img facebook -->

    <!-- start  button name facebook -->
    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/abhaya_libre_extrabold"
        android:textStyle="bold"
        android:text="Name"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="149dp"
        tools:layout_editor_absoluteY="56dp" />
    <!-- end  button name facebook -->

    <!-- start  button menu cake -->
    <Button
        android:id="@+id/login_button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="280dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/cricle_bt"
        android:fontFamily="@font/abhaya_libre_extrabold"
        android:text="bank"
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="300dp"
        tools:layout_editor_absoluteY="80dp" />
    <!-- end  button Logout facebook -->


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyLayout"
        android:layout_below="@id/login_button2"
        android:layout_marginTop="60dp"
        android:fontFamily="@font/abhaya_libre_extrabold"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


</RelativeLayout>