<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/s1"
    android:padding="10dp"
    tools:context=".profile">

    <!-- start  img facebook -->
    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/iv_profile"
        android:layout_width="70dp"
        android:layout_height="70dp"
        tools:layout_editor_absoluteX="28dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/cricle_bt"
        android:layout_marginTop="10dp"
        tools:layout_editor_absoluteY="16dp" />
    <!-- facebook  img facebook -->

    <!-- start  button name facebook -->
    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/abhaya_libre_extrabold"
        android:textStyle="bold"
        android:text="Name"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="149dp"
        tools:layout_editor_absoluteY="56dp" />
    <!-- end  button name facebook -->

    <!-- start  button Logout facebook-->
    <Button
        android:id="@+id/login_button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="280dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/cricle_bt"
        android:fontFamily="@font/abhaya_libre_extrabold"
        android:text="logout"
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="300dp"
        tools:layout_editor_absoluteY="80dp" />
    <!-- end  button Logout facebook -->

    <!-- start  button Blizzard Ice Cream -->
    <Button
        android:id="@+id/btn1"
        android:layout_width="350dp"
        android:layout_height="180dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        android:background="@drawable/botton_icecream"
        android:drawableLeft="@mipmap/ice_foreground"
        android:fontFamily="@font/abril_fatface"
        android:text=" Blizzard Ice Cream "
        android:textColor="#EF7C7C"
        android:textSize="20dp"
        android:textStyle="bold" />
    <!-- end  button Blizzard Ice Cream -->

    <!-- start  button Ice Cream Cake -->
    <Button
        android:id="@+id/btn2"
        android:layout_width="350dp"
        android:layout_height="180dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="400dp"
        android:background="@drawable/botton_icecream"
        android:drawableLeft="@mipmap/cake_foreground"
        android:fontFamily="@font/abril_fatface"
        android:text="Ice Cream Cake"
        android:textColor="#EF7C7C"
        android:textSize="20dp"
        android:textStyle="bold" />
    <!-- end  button Ice Cream Cake -->



</RelativeLayout>



